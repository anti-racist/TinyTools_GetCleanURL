{
  "manifest_version": 3,
  "name": "Get Clean URL",
  "version": "1.3",
  "description": "Get a clean URL without tracking parameters with one click. v1.3: Added a new utility to remove common tracking parameters
",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
